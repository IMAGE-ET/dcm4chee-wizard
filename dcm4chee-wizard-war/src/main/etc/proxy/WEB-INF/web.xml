<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_3_0.xsd"
	version="3.0">
	<display-name>dcm4chee-wizard</display-name>
	<filter>
		<filter-name>wicket.dcm4chee-wizard</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter
		</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.dcm4chee.wizard.war.WizardApplication</param-value>
		</init-param>
		<init-param>
			<param-name>dicomConfigurationClass</param-name>
			<param-value>${config-class}</param-value>
		</init-param>
		<init-param>
			<param-name>ldapPropertiesURL</param-name>
			<param-value>file:${jboss.server.config.dir}/dcm4chee-wizard/ldap.properties
			</param-value>
		</init-param>
		<init-param>
			<param-name>wizardWarName</param-name>
			<param-value>dcm4chee-wizard-war-${version}-${project-classifier}.war
			</param-value>
		</init-param>
		<init-param>
			<param-name>proxyJarName</param-name>
			<param-value>dcm4chee-proxy-service-1.0.0-SNAPSHOT.jar</param-value>
		</init-param>
		<init-param>
			<param-name>internalErrorPageClass</param-name>
			<param-value>org.dcm4chee.wizard.common.component.InternalErrorPage
			</param-value>
		</init-param>
		<init-param>
			<param-name>pageExpiredPageClass</param-name>
			<param-value>org.dcm4chee.wizard.war.MainPage</param-value>
		</init-param>
		<init-param>
			<param-name>LoginAllowedRolename</param-name>
			<param-value>LoginAllowed</param-value>
		</init-param>
		<init-param>
			<param-name>DefaultDicomConfigurationName</param-name>
			<param-value>DicomConfiguration</param-value>
		</init-param>
		<init-param>
			<param-name>CheckForChangesInterval</param-name>
			<!-- given in seconds -->
			<param-value></param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>wicket.dcm4chee-wizard</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>configuration</param-name>
		<param-value>deployment</param-value>
	</context-param>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>dcm4chee-proxy</servlet-name>
		<servlet-class>org.dcm4chee.proxy.ProxyServlet</servlet-class>
		<init-param>
			<param-name>ldapPropertiesURL</param-name>
			<param-value>file:${jboss.server.config.dir}/dcm4chee-wizard/ldap.properties
			</param-value>
		</init-param>
		<init-param>
			<param-name>deviceName</param-name>
			<param-value>${device-name}</param-value>
		</init-param>
		<init-param>
			<param-name>jmxName</param-name>
			<param-value>org.dcm4chee.proxy:type=Service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<security-role>
		<role-name>*</role-name>
	</security-role>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Static resources for form based login
			</web-resource-name>
			<url-pattern>/wicket/resource/org.dcm4chee.wizard.common.login.LoginPage/*
			</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Static resources for form based login
			</web-resource-name>
			<url-pattern>/wicket/resource/org.dcm4chee.wizard.common.component.MainWebPage/*
			</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected resources for web application
			</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Static resources for proxy services
            </web-resource-name>
            <url-pattern>/proxy-application/*
            </url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>dcm4chee</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login.jsp?loginFailed=true</form-error-page>
		</form-login-config>
	</login-config>
	<!-- <login-config> <auth-method>BASIC</auth-method> <realm-name>dcm4chee</realm-name> 
		</login-config> -->
</web-app>
